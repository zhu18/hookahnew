<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">


    <!-- 业务具体实现类 -->
    <bean id="payAccountRecordService" class="com.jusfoun.hookah.pay.service.impl.PayAccountRecordServiceImpl"/>
    <bean id="payAccountService" class="com.jusfoun.hookah.pay.service.impl.PayAccountServiceImpl"/>
    <bean id="payTradeRecordService" class="com.jusfoun.hookah.pay.service.impl.PayTradeRecordServiceImpl"/>
    <bean id="fundRecordService" class="com.jusfoun.hookah.pay.service.impl.FundRecordServiceImpl"/>

    <!-- 具体rpc服务配置，声明实现的接口类。-->
    <motan:service interface="com.jusfoun.hookah.rpc.api.PayAccountRecordService"
                   ref="payAccountRecordService" export="hookah:5008" basicService="serviceBasicConfig">
    </motan:service>

    <motan:service interface="com.jusfoun.hookah.rpc.api.PayAccountService"
                   ref="payAccountService" export="hookah:5008" basicService="serviceBasicConfig">
    </motan:service>

    <motan:service interface="com.jusfoun.hookah.rpc.api.PayTradeRecordService"
                   ref="payTradeRecordService" export="hookah:5008" basicService="serviceBasicConfig">
    </motan:service>

    <motan:service interface="com.jusfoun.hookah.rpc.api.FundRecordService"
                   ref="fundRecordService" export="hookah:5008" basicService="serviceBasicConfig">
    </motan:service>
</beans>