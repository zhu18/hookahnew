<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jusfoun.hookah.core.dao.UserInvoiceAddressMapper" >

    <resultMap id="goodsAreasResultMap" type="com.jusfoun.hookah.core.domain.vo.UserInvoiceAddressVo">
        <result column="goods_areas" jdbcType="VARCHAR" property="goodsAreas" />
    </resultMap>

    <select id="getUserInvoiceAddressById" resultMap="goodsAreasResultMap" parameterType="java.lang.String">
        select *, getRegionParentList(region) goods_areas from user_invoice_address

        where id = #{id}
    </select>
</mapper>