    <select id="getNeedEsGoods" resultMap="EsResultMap">
        SELECT
            goods_id,
            goods_name,
            shop_price,
            shop_number,
            shop_format,
            goods_brief,
            goods_desc,
            keywords,
            goods_img,
            cat_id,
            getCategoryParentList(cat_id) cat_ids,
            goods_area goods_area,
            getRegionParentList(goods_area) goods_areas,
            add_time,
            last_update_time,
            onsale_start_date,
            is_discuss_price
        from
            goods
        where is_delete = 1
        and is_onsale = 1
        and check_status = 1
    </select>

