<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">


    <!-- 业务具体实现类 -->
    <bean id="couponService" class="com.jusfoun.hookah.coupon.service.impl.CouponServiceImpl"/>
    <bean id="mgCouponService" class="com.jusfoun.hookah.coupon.service.impl.MgCouponServiceImpl"/>
    <bean id="userCouponService" class="com.jusfoun.hookah.coupon.service.impl.UserCouponServiceImpl"/>
    <!-- 具体rpc服务配置，声明实现的接口类。-->
    <motan:service interface="com.jusfoun.hookah.rpc.api.CouponService"
                   ref="couponService" export="hookah:5009" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.MgCouponService"
                   ref="mgCouponService" export="hookah:5009" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.UserCouponService"
                   ref="userCouponService" export="hookah:5009" basicService="serviceBasicConfig">
    </motan:service>

</beans>