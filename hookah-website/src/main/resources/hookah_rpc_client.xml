<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!-- 注册中心配置 使用不同注册中心需要依赖对应的jar包。-->
    <!--<motan:registry regProtocol="local" name="registry"/>-->
    <motan:registry regProtocol="consul" name="registry" address="192.168.15.90:8500"/>
    <!--<motan:registry regProtocol="consul" name="registry" address="127.0.0.1:8500"/>-->
    <!--<motan:registry regProtocol="zookeeper" name="registry" address="127.0.0.1:2181" connectTimeout="2000"/>-->

    <!-- motan协议配置 -->
    <motan:protocol default="true" name="motan" haStrategy="failover"
                    loadbalance="roundrobin" maxClientConnection="10" minClientConnection="2"/>

    <!-- 通用referer基础配置 -->
    <motan:basicReferer requestTimeout="200" accessLog="false"
                        retries="2" group="hookah-rpc" module="hookah-rpc"
                        application="hookah" protocol="motan" registry="registry"
                        id="HookahRPCClientBasicConfig" throwException="false" check="true"/>

    <!-- 具体referer配置。使用方通过beanid使用服务接口类 -->
    <motan:referer id="userService"
                   interface="com.jusfoun.hookah.rpc.api.UserService"
                   connectTimeout="300" requestTimeout="300" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="goodsService"
                   interface="com.jusfoun.hookah.rpc.api.GoodsService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="goodsMongoService"
                   interface="com.jusfoun.hookah.rpc.api.GoodsMongoService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="userMongoService"
                   interface="com.jusfoun.hookah.rpc.api.UserMongoService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="mqSenderService"
                   interface="com.jusfoun.hookah.rpc.api.MqSenderService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="categoryService"
                   interface="com.jusfoun.hookah.rpc.api.CategoryService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="sysNewsService"
                   interface="com.jusfoun.hookah.rpc.api.SysNewsService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="mgCategoryAttrTypeService"
                   interface="com.jusfoun.hookah.rpc.api.MgCategoryAttrTypeService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="mgGoodsService"
                   interface="com.jusfoun.hookah.rpc.api.MgGoodsService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
</beans>