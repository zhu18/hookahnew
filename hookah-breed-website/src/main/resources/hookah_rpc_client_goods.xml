<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!-- 具体referer配置。使用方通过beanid使用服务接口类 -->
    <motan:referer id="goodsService"
                   interface="com.jusfoun.hookah.rpc.api.GoodsService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="categoryService"
                   interface="com.jusfoun.hookah.rpc.api.CategoryService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="mgCategoryAttrTypeService"
                   interface="com.jusfoun.hookah.rpc.api.MgCategoryAttrTypeService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="mgGoodsService"
                   interface="com.jusfoun.hookah.rpc.api.MgGoodsService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="mgGoodsHistoryService"
                   interface="com.jusfoun.hookah.rpc.api.MgGoodsHistoryService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="shelvesService"
                   interface="com.jusfoun.hookah.rpc.api.ShelvesService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="elasticSearchService"
                   interface="com.jusfoun.hookah.rpc.api.ElasticSearchService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="goodsFavoriteService"
                   interface="com.jusfoun.hookah.rpc.api.GoodsFavoriteService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="goodsCheckService"
                   interface="com.jusfoun.hookah.rpc.api.GoodsCheckService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
    <motan:referer id="commentService"
                   interface="com.jusfoun.hookah.rpc.api.CommentService"
                   connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>

</beans>