<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">


    <!-- 业务具体实现类 -->
    <!-- 购物车 -->
    <bean id="cartService" class="com.jusfoun.hookah.console.server.service.impl.CartServiceImpl"/>
    <!-- 订单 -->
    <bean id="orderInfoService" class="com.jusfoun.hookah.console.server.service.impl.OrderInfoServiceImpl"/>
    <bean id="mgOrderInfoService" class="com.jusfoun.hookah.console.server.service.impl.MgOrderInfoServiceImpl"/>

    <bean id="invoiceService" class="com.jusfoun.hookah.console.server.service.impl.InvoiceServiceImpl"/>
    <bean id="orderInvoiceService" class="com.jusfoun.hookah.console.server.service.impl.OrderInvoiceServiceImpl"/>
    <bean id="userInvoiceTitleService" class="com.jusfoun.hookah.console.server.service.impl.UserInvoiceTitleServiceImpl"/>
    <bean id="userInvoiceAddressService" class="com.jusfoun.hookah.console.server.service.impl.UserInvoiceAddressServiceImpl"/>
    <bean id="expressInfoService" class="com.jusfoun.hookah.console.server.service.impl.ExpressInfoServiceImpl"/>

    <bean id="payCoreService" class="com.jusfoun.hookah.console.server.service.impl.PayCoreServiceImpl"/>
    <bean id="accNoTokenService" class="com.jusfoun.hookah.console.server.service.impl.AccNoTokenServiceImpl"/>
    <bean id="waitSettleRecordService" class="com.jusfoun.hookah.console.server.service.impl.WaitSettleRecordServiceImpl"/>
    <bean id="settleRecordService" class="com.jusfoun.hookah.console.server.service.impl.SettleRecordServiceImpl"/>

    <!-- 具体rpc服务配置，声明实现的接口类。-->
    <motan:service interface="com.jusfoun.hookah.rpc.api.CartService"
                   ref="cartService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.OrderInfoService"
                   ref="orderInfoService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.MgOrderInfoService"
                   ref="mgOrderInfoService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>

    <motan:service interface="com.jusfoun.hookah.rpc.api.InvoiceService"
                   ref="invoiceService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.OrderInvoiceService"
                   ref="orderInvoiceService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.UserInvoiceTitleService"
                   ref="userInvoiceTitleService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.UserInvoiceAddressService"
                   ref="userInvoiceAddressService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.ExpressInfoService"
                   ref="expressInfoService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>


    <motan:service interface="com.jusfoun.hookah.rpc.api.PayCoreService"
                   ref="payCoreService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.AccNoTokenService"
                   ref="accNoTokenService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.WaitSettleRecordService"
                   ref="waitSettleRecordService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
    <motan:service interface="com.jusfoun.hookah.rpc.api.SettleRecordService"
                   ref="settleRecordService" export="hookah:5001" basicService="serviceBasicConfig">
    </motan:service>
</beans>