<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

  <!-- 注册中心配置 使用不同注册中心需要依赖对应的jar包。-->
  <!--<motan:registry regProtocol="local" name="registry"/>-->
  <!--<motan:registry regProtocol="consul" name="registry" address="192.168.15.90:8500"/>-->
  <motan:registry regProtocol="consul" name="registry" address="${myconf.consul.ipPort}"/>
  <!--<motan:registry regProtocol="zookeeper" name="registry" address="127.0.0.1:2181" connectTimeout="2000"/>-->

  <!-- motan协议配置 -->
  <motan:protocol default="true" name="motan" haStrategy="failover"
                  loadbalance="roundrobin" maxClientConnection="10" minClientConnection="2"/>

  <!-- 通用referer基础配置 -->
  <motan:basicReferer requestTimeout="200" accessLog="false"
                      retries="2" group="hookah-rpc" module="hookah-rpc"
                      application="hookah" protocol="motan" registry="registry"
                      id="HookahRPCClientBasicConfig" throwException="false" check="false"/>

  <!-- 具体referer配置。使用方通过beanid使用服务接口类 -->
  <motan:referer id="roleService"
                 interface="com.jusfoun.hookah.rpc.api.RoleService"
                 connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>

  <motan:referer id="userRoleService"
                 interface="com.jusfoun.hookah.rpc.api.UserRoleService"
                 connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>

  <!-- 具体referer配置。使用方通过beanid使用服务接口类 -->
  <motan:referer id="cashRecordService"
                 interface="com.jusfoun.hookah.rpc.api.CashRecordService"
                 connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>

  <!-- 具体referer配置。使用方通过beanid使用服务接口类 -->
  <motan:referer id="loginLogService"
                 interface="com.jusfoun.hookah.rpc.api.LoginLogService"
                 connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>

  <motan:referer id="permissionService"
                 interface="com.jusfoun.hookah.rpc.api.PermissionService"
                 connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>

  <motan:referer id="rolePermissionService"
                 interface="com.jusfoun.hookah.rpc.api.RolePermissionService"
                 connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>

  <motan:referer id="payAccountService"
                 interface="com.jusfoun.hookah.rpc.api.PayAccountService"
                 connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>

  <motan:referer id="payTradeRecordService"
                 interface="com.jusfoun.hookah.rpc.api.PayTradeRecordService"
                 connectTimeout="30000" requestTimeout="30000" basicReferer="HookahRPCClientBasicConfig"/>
</beans>